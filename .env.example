# ── Asset & Interval ──
ASSET=btc
INTERVAL=1h
# SERIES_ID=10114  # auto-detected from asset+interval

# ── Mode ──
DRY_RUN=true

# ── Polymarket CLOB Credentials (required when DRY_RUN=false) ──
POLYMARKET_PRIVATE_KEY=
POLYMARKET_SIG_TYPE=0           # 0=EOA (MetaMask), 1=Poly Proxy, 2=Gnosis Safe
# POLYMARKET_FUNDER_ADDRESS=    # only needed for Proxy/Safe wallets

# ── Bankroll & Risk ──
BANKROLL=1000
MAX_EXPOSURE_FRAC=0.15
# DAILY_LOSS_HALT=-0.03
# WEEKLY_LOSS_HALT=-0.08

# ── Oracle Model ──
ORACLE_DELTA_S=2.0
# ORACLE_BETA=0.0
EWMA_LAMBDA=0.94
SIGMA_FLOOR_ANNUAL=0.30

# ── WebSocket URLs (defaults work for BTC) ──
BINANCE_WS=wss://stream.binance.com:9443/ws/btcusdt@trade
# BINANCE_WS_FALLBACK=wss://stream.binance.us:9443/ws/btcusd@trade
# PM_CLOB_WS=wss://ws-subscriptions-clob.polymarket.com/ws/market

# ── Telegram Alerts (optional) ──
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# ── Strategy Toggles (true by default, set false to disable) ──
# STRAT_LATENCY_ARB=true
# STRAT_CERTAINTY_CAPTURE=true
# STRAT_CONVEXITY_FADE=true
# STRAT_STRIKE_MISALIGN=true
# STRAT_LP_EXTREME=true
# STRAT_CROSS_TF=false
